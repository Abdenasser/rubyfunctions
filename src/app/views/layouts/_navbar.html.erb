<nav class="navbar is-fixed-top">
  <div class="navbar-brand">
    <%= link_to functions_path, class: 'navbar-item' do %>
      <%= image_tag 'logo.svg' %>
    <% end %>

    <%= link_to functions_path, class: 'navbar-item is-paddingless' do %>
      <strong>RUBY FUNCTIONS</strong>
    <% end %>
  </div>

  <div class="navbar-menu">

    <div class="navbar-end">

      <div class="navbar-item">
        <div class="control">

        <% if current_user %>

          <%= link_to new_function_path, class: 'button' do %>
            <span class="icon"> <i class="fas fa-plus"></i> </span>
            <span>New function</span>
          <% end %>

          <%= link_to session_path, method: :delete, class: 'button has-text-danger' do %>
            <span>Logout</span>
            <span class="icon"> <i class="fas fa-power-off"></i> </span>
          <% end %>
        <% else %>

          <%= link_to "https://github.com/login/oauth/authorize?client_id=#{ENV["GITHUB_CLIENT_ID"]}", class: 'button' do %>
            <span class="icon"> <i class="fab fa-github"></i> </span>
            <span>Login with Github</span>
          <% end %>

        <% end %>
        </div>
      </div>

    </div>
  </div>
</nav>
